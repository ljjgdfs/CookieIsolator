{
  "name": "CookieIsolator",
  "version": "1.0",
  "description": "Separating HTTP and HTTPS cookies",
  "permissions": ["webRequest", "webRequestBlocking", "storage",
                  "http://*/", "https://*/", "cookies"
                  ],
  "background": {
    "scripts": ["public_suffix.js", "url_parser.js", "policy.js", "cookie_manager.js", "background.js", "mining/background.js" ]
  },

  "browser_action": {
      "default_icon": "images.png",
      "default_popup": "popup.html",
      "default_title": "Cookie Isolator"
  },


  "manifest_version": 2
}
